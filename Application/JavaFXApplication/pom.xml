<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.nuberjonas.pompalette</groupId>
        <artifactId>application</artifactId>
        <version>0.9.0-SNAPSHOT</version>
    </parent>

    <groupId>org.nuberjonas.pompalette.application</groupId>
    <artifactId>javafx-application</artifactId>
    <version>0.9.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>JavaFXApplication</name>

    <properties>
        <javafx.version>20</javafx.version>
        <smartgraph.version>2.0.0</smartgraph.version>
        <third-party.location>third-party</third-party.location>
        <jdk.name>zulu21.34.19-ca-jdk21.0.3-win_x64</jdk.name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-base</artifactId>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
        </dependency>
        <dependency>
            <groupId>io.github.mkpaz</groupId>
            <artifactId>atlantafx-base</artifactId>
        </dependency>
        <dependency>
            <groupId>com.brunomnsilva</groupId>
            <artifactId>smartgraph</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <dependency>
            <groupId>org.nuberjonas.pompalette.core</groupId>
            <artifactId>org.nuberjonas.pompalette.core.model</artifactId>
        </dependency>
        <dependency>
            <groupId>org.nuberjonas.pompalette.infrastructure</groupId>
            <artifactId>org.nuberjonas.pompalette.infrastructure.eventbus</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>false</addClasspath>
                            <mainClass>org.nuberjonas.pompalette.application.javafx_application.StartPomPaletteApp</mainClass>
                        </manifest>
                        <manifestEntries>
                            <Class-Path>${third-party.location}/aopalliance-1.0.jar ${third-party.location}/atlantafx-base-2.0.1.jar ${third-party.location}/commons-lang3-3.14.0.jar ${third-party.location}/failureaccess-1.0.1.jar ${third-party.location}/guava-32.0.1-jre.jar ${third-party.location}/guice-5.1.0.jar ${third-party.location}/javafx-base-${javafx.version}-win.jar ${third-party.location}/javafx-base-${javafx.version}.jar ${third-party.location}/javafx-controls-${javafx.version}-win.jar ${third-party.location}/javafx-controls-${javafx.version}.jar ${third-party.location}/javafx-fxml-${javafx.version}-win.jar ${third-party.location}/javafx-fxml-${javafx.version}.jar ${third-party.location}/javafx-graphics-${javafx.version}-win.jar ${third-party.location}/javafx-graphics-${javafx.version}.jar ${third-party.location}/javax.annotation-api-1.2.jar ${third-party.location}/javax.inject-1.jar ${third-party.location}/LICENSES.txt ${third-party.location}/LICENSES.xlsx ${third-party.location}/LICENSES.xml ${third-party.location}/maven-api-meta-4.0.0-alpha-9.jar ${third-party.location}/maven-api-xml-4.0.0-alpha-9.jar ${third-party.location}/maven-artifact-3.9.6.jar ${third-party.location}/maven-builder-support-3.9.6.jar ${third-party.location}/maven-core-3.9.6.jar ${third-party.location}/maven-model-3.9.6.jar ${third-party.location}/maven-model-builder-3.9.6.jar ${third-party.location}/maven-plugin-api-3.9.6.jar ${third-party.location}/maven-repository-metadata-3.9.6.jar ${third-party.location}/maven-resolver-api-1.9.18.jar ${third-party.location}/maven-resolver-impl-1.9.18.jar ${third-party.location}/maven-resolver-named-locks-1.9.18.jar ${third-party.location}/maven-resolver-provider-3.9.6.jar ${third-party.location}/maven-resolver-spi-1.9.18.jar ${third-party.location}/maven-resolver-util-1.9.18.jar ${third-party.location}/maven-settings-3.9.6.jar ${third-party.location}/maven-settings-builder-3.9.6.jar ${third-party.location}/maven-shared-utils-3.3.4.jar ${third-party.location}/maven-xml-impl-4.0.0-alpha-9.jar ${third-party.location}/org.eclipse.sisu.inject-0.9.0.M2.jar ${third-party.location}/org.eclipse.sisu.plexus-0.9.0.M2.jar ${third-party.location}/plexus-cipher-2.0.jar ${third-party.location}/plexus-classworlds-2.7.0.jar ${third-party.location}/plexus-component-annotations-2.1.0.jar ${third-party.location}/plexus-interpolation-1.26.jar ${third-party.location}/plexus-sec-dispatcher-2.0.jar ${third-party.location}/plexus-utils-4.0.0.jar ${third-party.location}/plexus-xml-4.0.3.jar ${third-party.location}/slf4j-api-2.0.12.jar ${third-party.location}/smartgraph-2.0.0.jar ${third-party.location}/stax2-api-4.2.1.jar ${third-party.location}/woodstox-core-6.5.1.jar org.nuberjonas.pompalette.core.model-${project.version}.jar org.nuberjonas.pompalette.core.sharedkernel.project-dtos-${project.version}.jar org.nuberjonas.pompalette.infrastructure.eventbus-${project.version}.jar org.nuberjonas.pompalette.infrastructure.parsing.project-parsing-api-${project.version}.jar org.nuberjonas.pompalette.infrastructure.parsing.project-parsing-maven-impl-${project.version}.jar org.nuberjonas.pompalette.infrastructure.serviceloading-${project.version}.jar org.nuberjonas.pompalette.mapping.mapping-api-${project.version}.jar org.nuberjonas.pompalette.mapping.project-mapping-${project.version}.jar</Class-Path>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>Download JDK</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>https://cdn.azul.com/zulu/bin/${jdk.name}.zip</url>
                            <outputFileName>${jdk.name}.zip</outputFileName>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unzip jdk</id>
                        <phase>compile</phase>
                        <configuration>
                            <target>
                                <echo message="unziping jdk..." />
                                <unzip src="${project.build.directory}/${jdk.name}.zip" dest="${project.build.directory}" />
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jdk</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/POMPalette/jdk</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.build.directory}/${jdk.name}</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>include-scripts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/POMPalette</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${project.basedir}/src/main/build</directory>
                                    <includes>
                                        <include>*.bat</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-application-structure</id>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <finalName>POMPalette</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>src/main/build/assembly/createApplicationStructure.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>package-application</id>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <finalName>POMPalette-${project.version}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>src/main/build/assembly/packageApplication.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>